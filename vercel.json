{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node@latest"
        },
        {
            "src": "*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/auth/signup",
            "methods": ["POST"],
            "dest": "/api/auth.js"
        },
        {
            "src": "/api/auth/signin",
            "methods": ["POST"],
            "dest": "/api/auth.js"
        },
        {
            "src": "/api/auth/signout",
            "methods": ["POST"],
            "dest": "/api/auth.js"
        },
        {
            "src": "/api/auth/user",
            "methods": ["GET"],
            "dest": "/api/auth.js"
        },
        {
            "src": "/api/gallery/upload",
            "methods": ["POST"],
            "dest": "/api/gallery.js"
        },
        {
            "src": "/api/gallery/images",
            "methods": ["GET"],
            "dest": "/api/gallery.js"
        },
        {
            "src": "/api/gallery/delete",
            "methods": ["DELETE"],
            "dest": "/api/gallery.js"
        },
        {
            "src": "/gallery",
            "dest": "/gallery/index.html"
        },
        {
            "src": "/bytescript",
            "dest": "/bytescript/index.html"
        },
        {
            "src": "/projects",
            "dest": "/projects/index.html"
        },
        {
            "src": "/about",
            "dest": "/about/index.html"
        },
        {
            "src": "/auth",
            "dest": "/auth/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
} 